  {
    "manifest_version": 3,
    "name": "Simple Stock Tracker",
    "version": "1.0",
    "description": "Track real-time stock prices with this simple extension.",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["popup.js"]
      }
    ]
  }